<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/send_round_box"
        android:backgroundTint="#26A69A"
        android:fontFamily="@font/cabin"
        android:padding="10dp"
        android:text="@string/sample_of_sent_message"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/tv_bot_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/receive_round_box"
        android:backgroundTint="@color/system_blue"
        android:fontFamily="@font/cabin"
        android:padding="10dp"
        android:text="@string/sample_of_received_message"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="visible" />


</RelativeLayout>