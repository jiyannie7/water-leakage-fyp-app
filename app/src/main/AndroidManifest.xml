<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.waterleakageapp">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WaterLeakageApp"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.NewsDetailsActivity"></activity>
        <activity android:name=".ui.StatusActivity" />
        <activity
            android:name=".ui.ReportFormActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ui.ProfileActivity" />
        <activity android:name=".ui.ChatbotActivity" />
        <activity android:name=".ui.ResetPasswordActivity" />
        <activity android:name=".ui.RegisterActivity" />
        <activity android:name=".ui.MainPageActivity" />
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>